<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relativeLayout"
    android:background="@drawable/appbackground1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="App Alpha"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileButton"
        android:src="@mipmap/ic_launcher"
        android:clickable="false"
        android:background="@null"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:tint="#ffffffff"
        android:layout_toLeftOf="@+id/userTxt"
        android:layout_toStartOf="@+id/userTxt" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gamesButton"
        android:src="@mipmap/games_ic"
        android:background="@null"
        android:layout_alignTop="@+id/profileButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/gameTxt"
        android:tint="#ffffffff"
        android:layout_toRightOf="@+id/userTxt"
        android:layout_toEndOf="@+id/userTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Profile"
        android:id="@+id/profileTxt"
        android:textAlignment="center"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:textColor="#ffffffff"
        android:layout_alignBottom="@+id/profileButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  Games"
        android:id="@+id/gameTxt"
        android:textColor="#ffffffff"
        android:layout_alignBottom="@+id/profileButton"
        android:layout_alignLeft="@+id/gamesButton"
        android:layout_alignStart="@+id/gamesButton"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="*USER NAME*"
        android:id="@+id/userTxt"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#fffffdfb" />


</RelativeLayout>
